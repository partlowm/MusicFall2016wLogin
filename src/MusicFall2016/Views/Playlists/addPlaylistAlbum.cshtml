@model MusicFall2016.Models.PlayListAlbums

@{ ViewData["Title"] = "Add Album To Playlist";}
<form asp-action="addPlaylistAlbum">
    <div class="form-horizontal">
        <h4>PlaylistAlbum</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PlaylistID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select class="form-control inline" asp-for="PlaylistID" asp-items="ViewBag.playlists">
                    <option value="0">Select an artist</option>
                </select>
            </div>
        </div>
        @Html.HiddenFor(Model => Model.AlbumID)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="addPlaylistAlbum" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>