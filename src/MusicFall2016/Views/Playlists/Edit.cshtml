@model MusicFall2016.Models.Playlist

@{ ViewData["Title"] = "Rename";}
<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<h2>Rename Playlist</h2>
<div class="form">
    <form asp-action="Edit" class="form-horizontal">
        <input type="hidden" asp-for="PlaylistID" />
        <div class="form-group">
            <label asp-for="PlaylistName" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="PlaylistName" class="form-control" autofocus />
                <span asp-validation-for="PlaylistName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn-success btn-lg" />
                <a class="btn btn-default" href="http://localhost:63854/Playlists">Canel</a>
            </div>
        </div>
    </form>
</div>
