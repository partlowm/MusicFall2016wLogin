@model MusicFall2016.Models.Playlist

@{ ViewData["Title"] = "Create Playlist";}
<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<h2>Create a playlist</h2>
<div class="form">
    <form asp-action="Create" class="form-horizontal">
        <div class="form-group">
            <label asp-for="PlaylistName" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="PlaylistName" class="form-control" autofocus />
                <button type="submit" class="btn-success btn-lg">Create</button>
                <a href="http://localhost:63854/Playlists/Index">Cancel</a>
            </div>
        </div>
    </form>
</div>