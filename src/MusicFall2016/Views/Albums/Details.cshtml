@model MusicFall2016.Models.Album
@{
    ViewBag.Title = "Details";
}
<h2> Album Details</h2>
<br />
<p><b>Title:</b><blockquote>@Model.Title</blockquote></p>
<p><b>Artist:</b><blockquote>@Model.Artist.Name</blockquote></p>
<p><b>Artist Bio:</b><blockquote>@Model.Artist.Bio</blockquote></p>
<p><b>Genre:</b><blockquote>@Model.Genre.Name</blockquote></p>
<p><b>Price:</b><blockquote>@Model.Price</blockquote></p>
<br />
<h2>Recommendations:</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title:</th>
            <th>Artist:</th>
            <th>Genre:</th>
            <th>Likes:</th>
        </tr>
    </thead>
    @foreach (var album in ViewBag.AlbumsList)
    {

        if (album.Title != Model.Title)
        {
            if (album.Genre == Model.Genre) { }
        <tr>
            <td><asp-controller ="Albums" asp-action="Details" asp-route-id="@album.GenreID">@album.Title</td>
            <td><asp-controller ="Albums" asp-action="Details" asp-route-id="@album.GenreID">@album.Artist.Name</td>
            <td><asp-controller ="Albums" asp-action="Details" asp-route-id="@album.GenreID">@album.Genre.Name</td>
            <td><asp-controller ="Albums" asp-action="Details" asp-route-id="@album.GenreID">@album.Likes</td>

            
       </tr>
            }
        }


    }
</table>
<a class="btn btn-default" asp-action="Edit" asp-route-id="@Model.AlbumID">Edit</a>
<a class="btn btn-default" href="http://localhost:63854/Albums">Back To list</a>